{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env.local",
    ".env"
  ],
  "globalEnv": [
    "STAGE",
    "NODE_ENV",
    "BASE_URL",
    "TOKEN_URL",
    "NEXT_PUBLIC_PRIMARY_COLOR",
    "APPLICATION_NAME",
    "CLIENT_ID",
    "CLIENT_SECRET",
    "AUTH_SECRET",
    "FETCH_TENANT",
    "TENANT_ID",
    "HOME_ROUTE",
    "PROTECTED_ROUTES",
    "UNAUTHORIZED_ROUTES",
    "PROTECT_ALL_ROUTES",
    "DEFAULT_LOCALE",
    "SUPPORTED_LOCALES",
    "ABP_APP_NAME",
    "NOVU_APP_IDENTIFIER",
    "CI",
    "NOVU_APP_URL",
    "NOVU_SECRET_KEY",
    "SUPERSET_URL",
    "SUPERSET_DASHBOARD_ID",
    "AWS_REGION",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "CLICKHOUSE_URL",
    "CLICKHOUSE_DATABASE",
    "CLICKHOUSE_USERNAME",
    "CLICKHOUSE_PASSWORD",
    "CHATWOOT_BASE_URL",
    "CHATWOOT_WEBSITE_TOKEN",
    "TEST_LOCAL_URL",
    "TEST_DEV_URL",
    "TEST_UAT_URL",
    "TEST_TENANT",
    "ADMIN_USERNAME",
    "ADMIN_PASSWORD"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {},
    "lint-staged": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}